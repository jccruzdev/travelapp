<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 mt-4">
      <div class="section_title text-center">
        <h3>Ingresa Al Sistema</h3>
      </div>

      {{>logs}}


      <form action="/login" method="POST" autocomplete="off">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <input class="form-control valid" name="email" id="email" type="email" placeholder="Correo"
                value="{{oldInput.email}}" />
            </div>
          </div>

          <div class="col-sm-12">
            <div class="form-group">
              <input class="form-control valid" name="password" id="password" type="password"
                placeholder="Contraseña" />
            </div>
          </div>

          <div class="col-sm-12">
            <p>No tienes cuenta? <a href="/signup">Regístrate</a></p>
          </div>
        </div>
        <div class="form-group mt-3">
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <button type="submit" class="button button-contactForm boxed-btn">Ingresar</button>
        </div>
      </form>
    </div>
  </div>
</div>