<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="section_title text-center">
        {{#if newOper}}
        <h3>Primero Añade Un Operador</h3>
        {{else}}
        <h3>Editar Operador</h3>
        {{/if}}
      </div>

      <form method="POST" action="/admin/operador" autocomplete="off">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <label for="email">Correo</label>
              <input class="form-control valid" name="email" id="edit_oper_usu" type="text"
                placeholder="Ingrese el correo" value="{{email}}" required />
            </div>

            <div class="form-group">
              <label for="password">Contraseña</label>
              <input class="form-control valid" name="password" id="edit_oper_pass" type="text"
                placeholder="Ingrese la contraseña" value="{{password}}" required />
            </div>
          </div>
        </div>
        <div class="form-group mt-3">
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <button type="submit" class="button button-contactForm boxed-btn">
            {{#if newOper}} Añadir Operador {{else}}Confirmar edición {{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>